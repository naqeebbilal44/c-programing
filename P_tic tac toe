#include <stdio.h>

char board[9] = {'1','2','3','4','5','6','7','8','9'};

void draw() {
    printf("\n");
    for (int i = 0; i < 9; i++) {
        printf(" %c ", board[i]);
        if (i % 3 != 2) printf("|");
        else if (i != 8) printf("\n---|---|---\n");
    }
    printf("\n");
}

int win() {
    int w[8][3] = {{0,1,2},{3,4,5},{6,7,8}, {0,3,6},{1,4,7},{2,5,8}, {0,4,8},{2,4,6}};
    for (int i = 0; i < 8; i++)
        if (board[w[i][0]] == board[w[i][1]] && board[w[i][1]] == board[w[i][2]])
            return 1;
    return 0;
}

int main() {
    int move, turn = 0;
    char mark;
    printf("=== Simple Tic Tac Toe ===\n");

    while (1) {
        draw();
        mark = (turn % 2 == 0) ? 'X' : 'O';
        printf("Player %d (%c), enter move (1-9): ", (turn % 2) + 1, mark);
        scanf("%d", &move);

        if (move < 1 || move > 9 || board[move - 1] == 'X' || board[move - 1] == 'O') {
            printf("Invalid! Try again.\n");
            continue;
        }

        board[move - 1] = mark;
        turn++;

        if (win()) {
            draw();
            printf("ğŸ‰ Player %d (%c) wins!\n", (turn % 2 == 0) ? 2 : 1, mark);
            break;
        }

        if (turn == 9) {
            draw();
            printf("ğŸ¤ It's a draw!\n");
            break;
        }
    }

    return 0;
}
