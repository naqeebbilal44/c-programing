//Display all even numbers from 1 to n [using loop and if]
#include <stdio.h>

int main() {
    int i,n;
    printf("enter the number you want to get counting of even numbers upto:");
    scanf("%d",&n);
    for (i = 1; i <= n; i++) {
        if (i % 2 == 0) {
            printf("%d ", i);
        }
    }
    return 0;
}
