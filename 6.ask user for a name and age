#include <stdio.h>

int main() {
    char name[50];
    int age;

    // Asking for name and age
    printf("Enter your name: ");
    scanf("%s", name);  // Will only take one word (no spaces)

    printf("Enter your age: ");
    scanf("%d", &age);

    // Printing the result
    printf("Hello %s! You are %d years old.\n", name, age);

    return 0;
}
